@using ComedySite.NewsApi;

@model NewsResult

@{
	ViewData["Title"] = "Last News";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Are you a Trumpster? Then those are fake news</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="stylesheet" href="~/css/lastNews.css" />
</head>
<body>
	<h1>@ViewData["Title"]</h1>

	<p>Total of articles: @Model.Articles.Count </p>

	@foreach (var article in @Model.Articles)
	{
		<a href="@article.Url" target="_blank">
			<div class="parent polaroid">
				<div class="article-img">
					<img src="@article.UrlToImage" alt="@article.Title" class="news" />
				</div>
				<div class="article-infos">

					<div class="parent-no-hover">
						<div class="infos-subject"><p>Source:</p></div>
						<div class="infos-content"><p>@article.Source.Name</p></div>
					</div>

					<div class="parent-no-hover">
						<div class="infos-subject"><p>Author:</p></div>
						<div class="infos-content"><p>@article.Author</p></div>
					</div>

					<div class="parent-no-hover">
						<div class="infos-subject"><p>Title:</p></div>
						<div class="infos-content"><p>@article.Title</p></div>
					</div>

					<div class="parent-no-hover">
						<div class="infos-subject"><p>Description:</p></div>
						<div class="infos-content"><p>@article.Description</p></div>
					</div>

					<div class="parent-no-hover">
						<div class="infos-subject"><p>Publish date:</p></div>
						<div class="infos-content"><p>@article.PublishedAt</p></div>
					</div>

				</div>
			</div>
		</a>
	}
</body>
</html>
